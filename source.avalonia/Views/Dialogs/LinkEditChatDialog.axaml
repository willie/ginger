<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Ginger.Views.Dialogs.LinkEditChatDialog"
        Title="Chat History"
        Width="800" Height="600"
        MinWidth="600" MinHeight="400"
        WindowStartupLocation="CenterOwner"
        CanResize="True">

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                BorderThickness="0,0,0,1" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                Padding="16,12">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel>
                    <TextBlock x:Name="CharacterName" Text="Character Name" FontWeight="SemiBold" FontSize="16"/>
                    <TextBlock x:Name="ChatCount" Text="0 chats" FontSize="12" Opacity="0.7"/>
                </StackPanel>
                <Button Grid.Column="1" Content="Refresh" Click="Refresh_Click" Padding="16,6"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" ColumnDefinitions="250,*">
            <!-- Chat List -->
            <Border BorderThickness="0,0,1,0" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}">
                <Grid RowDefinitions="Auto,*">
                    <TextBlock Grid.Row="0" Text="Chats" FontWeight="SemiBold" Margin="12,8"/>
                    <ListBox Grid.Row="1" x:Name="ChatList" SelectionChanged="ChatList_SelectionChanged"/>
                </Grid>
            </Border>

            <!-- Message View -->
            <Grid Grid.Column="1" RowDefinitions="Auto,*">
                <Border Grid.Row="0" Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                        Padding="12,8">
                    <TextBlock x:Name="SelectedChatName" Text="Select a chat" FontWeight="SemiBold"/>
                </Border>

                <ScrollViewer Grid.Row="1">
                    <StackPanel x:Name="MessageList" Margin="8"/>
                </ScrollViewer>
            </Grid>
        </Grid>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right"
                    Margin="16,12" Spacing="8">
            <Button Content="Export Chat..." Click="ExportChat_Click" Width="100" IsEnabled="False"
                    x:Name="ExportButton"/>
            <Button Content="Close" Click="Close_Click" Width="80"/>
        </StackPanel>
    </Grid>
</Window>
