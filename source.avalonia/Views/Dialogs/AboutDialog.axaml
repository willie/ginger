<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Ginger.Views.Dialogs.AboutDialog"
        Title="About Ginger"
        Width="400"
        Height="280"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        ShowInTaskbar="False">

    <Grid Margin="20" RowDefinitions="Auto, Auto, *, Auto">
        <!-- App Icon and Name -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="Ginger"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="{DynamicResource SystemAccentColor}"/>
        </StackPanel>

        <!-- Version Info -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" Spacing="5">
            <TextBlock x:Name="VersionText"
                       Text="Version 1.6.2"
                       HorizontalAlignment="Center"
                       FontSize="14"/>
            <TextBlock Text="Cross-platform Character Card Editor"
                       HorizontalAlignment="Center"
                       Opacity="0.7"/>
            <TextBlock Text="Avalonia UI Port"
                       HorizontalAlignment="Center"
                       Opacity="0.5"
                       FontSize="12"/>
        </StackPanel>

        <!-- Description -->
        <StackPanel Grid.Row="2" VerticalAlignment="Center" Spacing="10" Margin="0,20">
            <TextBlock Text="A character card editor for AI chatbots."
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"/>
            <TextBlock Text="Supports TavernCard V2/V3, Faraday, and Backyard AI formats."
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Opacity="0.7"/>
        </StackPanel>

        <!-- Close Button -->
        <Button Grid.Row="3"
                Content="Close"
                Width="100"
                HorizontalAlignment="Center"
                Click="CloseButton_Click"
                IsDefault="True"
                IsCancel="True"/>
    </Grid>
</Window>
