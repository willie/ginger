<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Ginger.Views.Dialogs.FileFormatDialog"
        Title="Export Format"
        Width="450"
        Height="350"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        CanResize="False">

    <Grid Margin="20" RowDefinitions="Auto,*,Auto">
        <TextBlock Grid.Row="0" Text="Select export format:" FontWeight="SemiBold"
                   Margin="0,0,0,12"/>

        <Border Grid.Row="1" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                BorderThickness="1" CornerRadius="4" Padding="8" Margin="0,0,0,16">
            <StackPanel Spacing="8">
                <RadioButton x:Name="PngRadio" GroupName="Format" IsChecked="True">
                    <StackPanel Spacing="4">
                        <TextBlock Text="PNG with embedded data" FontWeight="SemiBold"/>
                        <TextBlock Text="Character card image with JSON metadata (TavernCardV2)"
                                   FontSize="11" Opacity="0.7" TextWrapping="Wrap"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton x:Name="JsonRadio" GroupName="Format">
                    <StackPanel Spacing="4">
                        <TextBlock Text="JSON file" FontWeight="SemiBold"/>
                        <TextBlock Text="Plain JSON character data (TavernCardV2)"
                                   FontSize="11" Opacity="0.7" TextWrapping="Wrap"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton x:Name="YamlRadio" GroupName="Format">
                    <StackPanel Spacing="4">
                        <TextBlock Text="YAML file" FontWeight="SemiBold"/>
                        <TextBlock Text="Text-based format (TextGenWebUI compatible)"
                                   FontSize="11" Opacity="0.7" TextWrapping="Wrap"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton x:Name="CharxRadio" GroupName="Format">
                    <StackPanel Spacing="4">
                        <TextBlock Text="CHARX archive" FontWeight="SemiBold"/>
                        <TextBlock Text="Zip archive with card.json and assets"
                                   FontSize="11" Opacity="0.7" TextWrapping="Wrap"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton x:Name="ByafRadio" GroupName="Format">
                    <StackPanel Spacing="4">
                        <TextBlock Text="Backyard Archive (.byaf)" FontWeight="SemiBold"/>
                        <TextBlock Text="Backyard AI compatible archive format"
                                   FontSize="11" Opacity="0.7" TextWrapping="Wrap"/>
                    </StackPanel>
                </RadioButton>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
            <Button x:Name="OkButton" Content="Export" Width="80"
                    Click="OkButton_Click" IsDefault="True"/>
            <Button Content="Cancel" Width="80"
                    Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
